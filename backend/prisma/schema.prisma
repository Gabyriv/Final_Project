generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum StatsType {
  Serve
  Attack
  Defense // digs and block
  Pass
}

enum StatsResult {
  Success
  Failure
  Neutral
}

enum GameResult {
  Win
  Loss
  Draw
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  createdTeams  Team[]   @relation("CreatedBy")
  createdGames  Game[]   @relation("GameCreatedBy")
}

model Player {
  id     String @id @default(uuid())
  name   String
  number Int
  team   Team   @relation(fields: [teamId], references: [id])
  teamId String
}

model Team {
  id           String   @id @default(uuid())
  name         String
  players      Player[]
  games        Game[]
  gamesPlayed  Int      @default(0)
  wins         Int      @default(0)
  losses       Int      @default(0)
  draws        Int      @default(0)
  createdBy    User     @relation("CreatedBy", fields: [createdById], references: [id])
  createdById  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Game {
  id          String     @id @default(uuid())
  team        Team       @relation(fields: [teamId], references: [id])
  teamId      String
  opponent    String
  result      GameResult @default(Draw)
  createdBy   User       @relation("GameCreatedBy", fields: [createdById], references: [id])
  createdById String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
